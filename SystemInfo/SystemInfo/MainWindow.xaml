                            <Label x:Name="OSBuildG" Content="Build: " HorizontalAlignment="Left" Margin="10,75,0,0" VerticalAlignment="Top"/>
                            <Label x:Name="OS" Content="Operating System: " HorizontalAlignment="Left" Margin="10,15,0,0" VerticalAlignment="Top"/>
                        </Grid>
                    </TabItem>
                    <TabItem Header="CPU">
                        <Grid Background="#FFFFFF">
                            <Label x:Name="CPUBrandandModel" Content="Brand and Model: " Margin="10,15,42,0" VerticalAlignment="Top" Height="26"/>
                            <Label x:Name="CPUBits" Content="Bits: " Margin="10,45,0,0" HorizontalAlignment="Left" Width="568" Height="26" VerticalAlignment="Top"/>
