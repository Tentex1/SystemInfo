<Window x:Class="SystemReqWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemReqWPF"
        mc:Ignorable="d"
        Title="System Info" Height="335.674" Width="647.18" ResizeMode="NoResize">
    <Grid Margin="0,0,0,0">
        <Grid Height="297">
                <TabControl HorizontalAlignment="Left" Height="297" VerticalAlignment="Top" Width="630" Margin="0,-1,0,0">
                    <TabItem Header="Operating System">
